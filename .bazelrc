# Enable new-style C++ toolchain resolution and set the target platform
build --incompatible_enable_cc_toolchain_resolution
build --platforms=//platforms:pico

# Aliases for configuration settings
build --flag_alias=pico_board=//pico/config:board
build --flag_alias=pico_double_impl=//pico/config:double_impl
build --flag_alias=pico_float_impl=//pico/config:float_impl
build --flag_alias=pico_stdio_uart=//pico/config:stdio_uart
build --flag_alias=pico_stdio_usb=//pico/config:stdio_usb
